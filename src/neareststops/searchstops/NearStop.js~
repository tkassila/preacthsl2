            );
	else
	{
	    const neareststops = this.state.neareststops;
	    const neareststoptimes = null;
	    if (neareststops)		
		neareststoptimes = getNeareststoptimes(neareststops);
	    
         return ( 
            <div>
            <a id={this.state.stop.place.gtfsId} href={this.state.stop.place.gtfsId} onClick={this.astopClicked}>Pys채kki {this.state.stop.place.code} {this.state.stop.place.name} Et채isyys {this.state.stop.distance}</a>
		 {neareststoptimes}
            </div>
         );
	}

